@using Microsoft.AspNet.Identity
@model IEnumerable<newExam.Models.Order>

@{
    ViewBag.Title = "Заказы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список Заказов</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID Заказа</th>
                <th>ID Тура</th>
                <th>Тур</th>
                <th>Id User</th>
                <th>User Name</th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td class="text-right">@item.TourId</td>
                    <td class="text-right">@item.Tour.Country - @item.Tour.City - @item.Tour.Type</td>
                    <td class="text-right">@item.ApplicationUserId</td>
                    <td class="text-right">@item.UserName</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteOrder", "Admin"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit" class="btn btn-default btn-xs" value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
